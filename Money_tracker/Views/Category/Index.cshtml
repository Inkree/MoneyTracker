@using Core.models;
@using Pages.Shared;
@model IEnumerable<Category>;
@{
    Layout = "_Layout";
}


<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6 col-xs-12 main-column p-0 d-flex flex-column justify-content-between min-vh-100">
        <div class="content flex-grow-1">
            <div class="header">
                <p class="fs-4">Category</p>
            </div>
            <div class="search mt-5 d-flex justify-content-center">
                <input style="background:#29272f" placeholder="Search.." class="form-control mx-3" />
            </div>
            <div class="categories mt-5 p-4">
                @foreach(var category in Model)
                {
                    <div class="category mt-3">
                        <div class="icon-item" style="fill:@category.Color"> @Html.Raw(category.SvgContent) </div>
                        <p class="fs-5 m-1"> @category.Name</p>
                       
                    </div>
                    <hr />
                }
               
               
            </div>
        </div>
        @await Html.PartialAsync("AuthFooter", new AuthFooterModel())
    </div>
   
    <div class="col-md-3"></div>
   
</div>



<style>

    
    .category {
        display: flex;
        align-items: center; /* Выравнивание элементов по вертикали */
       gap:10px
    }

    
    .main-column {
        background: #0f0c14;
        min-height: 100vh;
        color: #e6e1e5;
    }

    .transaction- card .day {
        color: dimgrey;
    }

    .balance .text {
        color: dimgrey;
    }

</style>
